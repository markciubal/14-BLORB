<div class="m-2">
  <h2>Update Post</h2>
  <form class="post-form">
    <input type="text" class="w-100 m-2 mx-0 form-control" id="id-post" aria-describedby="emailHelp"
      value="{{ post.id }}" style="display: none;">
    <div class="form-group">
      <label for="title-post">Title</label>
      <input type="text" class="w-100 m-2 mx-0 form-control" id="title-post" aria-describedby="emailHelp"
        placeholder="Enter post title" value="{{ post.title }}">
    </div>
    <div class="form-group">
      <label for="body-post">Body</label>
      <textarea class="w-100 m-2 mx-0 form-control" id="body-post"
        placeholder="Enter post content">{{post.body }}</textarea>
    </div>
    <div class="form-group">
      <button class="w-100 mx-0 m-2 btn btn-primary" type="submit">Update Post</button>
    </div>
  </form>
  <form class="delete-form">
    <div class="form-group">
      <button class="w-100 mx-0 m-2 btn btn-danger" type="submit">Delete Post</button>
    </div>
</div>
</form>
</div>
<script src="/js/update.js"></script>
<script src="/js/delete.js"></script>